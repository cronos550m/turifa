<div class="container p-4">
   <div class="row">
    <div class="col-md-4 mx-auto">
            <div class="card">
            <div class="card-body">
                <form action="/numbers/add-mass-clients/{{numbers.NumbersGroup}}" method="POST">
                    <p>Agregar clientes a varios numeros, separarndolos por comas</p>
                    <div class="form-label">
                        <input type="text" class="form-control" name="ClientsNumbers" placeholder="Numeros por ejemplo: 1,2,30,45" autofocus>
                    </div>
                    <div class="form-label">
                        <input type="text" class="form-control" name="ClientsName" placeholder="Nombre">
                    </div>
                    <div class="form-label">
                        <input type="text" class="form-control" name="ClientsEmail" placeholder="Email del comprador">
                    </div>
                    <div class="form-label">
                        <input type="text" class="form-control" name="ClientsPhone" placeholder="Telefono del comprador">
                    </div>
                    <div class="form-label">
                        <button class="btn-block btn btn-success">
                            Agregar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
   </div> 
</div>