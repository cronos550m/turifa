<div class="container p-4">
   <div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-body">
                <form action="/numbers/add-clients/{{numbers.id}}" method="POST">
                    <p>Ingresa el nombre de la persona que compro el numero seleccionado</p>
                    <p>{{numbers.NumbersNumber}}</p>
                    <div class="form-label">
                        <input type="text" class="form-control" name="ClientsName" placeholder="Nombre" autofocus>
                    </div>
                    <div class="form-label">
                        <input type="text" class="form-control" name="ClientsEmail" placeholder="Email del comprador" autofocus>
                    </div>
                    <div class="form-label">
                        <input type="text" class="form-control" name="ClientsPhone" placeholder="Telefono del comprador" autofocus>
                    </div>
                    <div class="form-label">
                        <button class="btn-block btn btn-success">
                            Agregar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
   </div> 
</div>